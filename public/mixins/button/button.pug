mixin button(type, text)
    case type
        when 'primary'
            button.button.button_primary&attributes(attributes) #{text}
        when 'secondary'
            button.button.button_secondary&attributes(attributes) #{text}
        when 'menu'
            button.button_menu&attributes(attributes) #{text}
        when 'filter'
            button.button.button_filter #{text}
        default
            button.button.button_primary&attributes(attributes) #{text}