case data.type.value
    when 'puon'
        .item.item-puon
            .item__type.item__type-puon=data.type.text
            include ../../mixins/circle/circle.pug
            if data.isWork
                +circle('work')(class='item__is-work')
            else
                +circle('not-work')(class='item__is-work')
            span(value=data.district.value).item__district=data.district.text
            span.item__address=data.address
    when 'pion'
        .item.item-pion
            .item__type.item__type-pion=data.type.text
            include ../../mixins/circle/circle.pug
            if data.isWork
                +circle('work')(class='item__is-work')
            else
                +circle('not-work')(class='item__is-work')
            span(value=data.district.value).item__district=data.district.text
            span.item__address=data.address
